# CANアナライザー環境設定例

# CANインターフェースタイプ
# null: データを生成しないテスト用インターフェース
# virtual: 仮想CANデータを生成する開発用インターフェース
# hardware: 実際のCANハードウェアとの通信インターフェース（未実装）
# openpilot: openpilotからのリアルタイムCANデータ受信インターフェース
CAN_INTERFACE_TYPE=virtual

# === openpilot設定 ===
# openpilotのZMQエンドポイント（通常はopenpilotが動作しているデバイスのIPアドレス）
OPENPILOT_ZMQ_ENDPOINT=tcp://192.168.1.100:8001

# ZMQトピック（通常は'can'）
OPENPILOT_ZMQ_TOPIC=can

# 最大再接続試行回数
OPENPILOT_MAX_RECONNECT_ATTEMPTS=10

# 再接続間隔（ミリ秒）
OPENPILOT_RECONNECT_INTERVAL=5000

# バスフィルター（特定のCANバスのメッセージのみ受信）
# 例: 0,1,2 (バス0、1、2のメッセージのみ)
# 未設定の場合は全バスのメッセージを受信
#OPENPILOT_BUS_FILTER=0,1,2

# IDフィルター（特定のCAN IDのメッセージのみ受信）
# 例: 0x100,0x200,0x300 または 256,512,768
# 16進数表記(0x)と10進数表記の両方をサポート
# 未設定の場合は全IDのメッセージを受信
#OPENPILOT_ID_FILTER=0x100,0x200,0x300

# デバッグログ有効化
OPENPILOT_DEBUG_LOGGING=false

# === 開発設定 ===
# Next.js開発モード
NODE_ENV=development

# ポート設定
PORT=3000

# === データベース設定（将来的な拡張用） ===
# DATABASE_URL=sqlite://./data/candata.db

# === ログ設定 ===
# LOG_LEVEL=info
# LOG_FILE=./logs/canalyzer.log